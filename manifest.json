{
  "manifest_version": 2,
  "name": "XDEMO",
  "version": "2.0",
  "description": "用于向页面注入线上脚本的插件", 
  "browser_action": { 
    "default_icon": "img/128.png" ,
    "default_title": "XDEMO 2.0",
    "default_popup": "popup.html"    
  },
  // "icons": { 
  //   "16": "img/logo16.png",             
  //   "48": "img/logo48.png",            
  //   "128": "img/logo.png" 
  // },    
  "options_page": "option.html",
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*.yixun.com/*","http://localhost/*"],
      "js" : ["js/jquery.min.js","js/content.js"]
    },
      {
        "matches": ["http://xdemo.reeqi.me/index.php/welcome/*"],
        "js": ["js/getid.js"],
        "run_at":"document_end"
      }
  ],  
  "content_security_policy": "script-src 'self' https://raw.github.com; object-src 'self'",
	"permissions": ["tabs","http://*/","https://*/"],
  "update_url": "http://xdemo.reeqi.me/index.php/welcome/update?update"
}